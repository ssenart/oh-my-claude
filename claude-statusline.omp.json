{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": false,
  "console_title_template": "",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#ff6b35",
          "template": " \uea83 {{ .Path }} ",
          "options": {
            "folder_icon": " \uf07b ",
            "home_icon": "\ue617",
            "style": "folder"
          }
        },
        {
          "background": "#fffb38",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#f17c37{{ end }}",
            "{{ if gt .Behind 0 }}#89d1dc{{ end }}"
          ],
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "type": "text",
          "style": "powerline",
          "leading_powerline_symbol": "\uE0D6",
          "powerline_symbol": "\uE0B0",
          "background": "#00897b",
          "foreground": "#ffffff",
          "template": " {{ if .Env.CLAUDE_CONTEXT }}󰍛 {{ .Env.CLAUDE_CONTEXT }}{{ end }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "background": "#00d9ff",
          "foreground": "#ffffff",
          "template": " {{ if .Env.CLAUDE_CODE_USAGE }}# {{ .Env.CLAUDE_CODE_USAGE }}{{ end }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "background": "#ff8c94",
          "foreground": "#ffffff",
          "template": " {{ if .Env.CLAUDE_PRO_USAGE }}󰓅 {{ .Env.CLAUDE_PRO_USAGE }}{{ end }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "background": "#9d4edd",
          "foreground": "#ffffff",
          "template": " {{ if .Env.CLAUDE_RESET }}󰔛 {{ .Env.CLAUDE_RESET }}{{ end }} "
        },
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "<transparent,background>\uE0B0</>",
          "trailing_diamond": "\ue0b4",
          "foreground": "#ffffff",
          "background": "#3a86ff",
          "template": " 󰯉 {{ .Env.CLAUDE_MODEL }} "
        }
      ]
    }
  ]
}
